        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="36"
            FontWeight="Bold"
            Foreground="Purple"
            Text="Test String"
            TextWrapping="Wrap" />

    </Grid>
</Window>
